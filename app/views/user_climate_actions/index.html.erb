<p id="notice"><%= notice %></p>

<h1>User Climate Actions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Action</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_climate_actions.each do |user_climate_action| %>
      <tr>
        <td><%= user_climate_action.user_id %></td>
        <td><%= user_climate_action.climate_action_id %></td>
        <td><%= user_climate_action.status %></td>
        <td><%= link_to 'Show', user_climate_action %></td>
        <td><%= link_to 'Edit', edit_user_climate_action_path(user_climate_action) %></td>
        <td><%= link_to 'Destroy', user_climate_action, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

