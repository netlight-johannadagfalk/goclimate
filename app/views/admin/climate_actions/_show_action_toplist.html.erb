<div class = "container" style = "display: inline-block;float:left;width:45%">
<h3 class="heading">Climate action toplist:</h3>
  <div class = "card" style = "outline: 2px dashed grey;">
        <table class="table"> 
            <thead>
            <tr>
                <th>Name</th>
                <th>Points</th>
                <th>Times performed</th>
                <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
            <% if !@number_of_performed_users_actions_in_order.nil?%>
            <% @number_of_performed_users_actions_in_order.each do |climate_action| %>
                <tr>
                <td><%= climate_action.name %></td>
                <td><%= climate_action.points %> CO2</td>
                <td><%= climate_action.total %> times</td> 
                </tr>
            <% end %>
            <% end %>
            </tbody>
        </table>
    </div>
</div>