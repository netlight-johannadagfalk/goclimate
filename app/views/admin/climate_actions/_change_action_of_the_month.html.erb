<div id="myModal" class="modal hidden">
<%= form_tag(admin_climate_actions_set_action_of_the_month_path, remote: true) do %>
    <div style="width:80vh">
        <div class="modal-content">
        <div class="group flex items-center">
            <div class="flex-initial">Change action of the month </div>
            <button type="button" class="close flex-1 text-lg text-right right-0" data-dismiss="modal" onclick = "document.getElementById('myModal').style.display='none'">Ã—</button>
            </div>
            <div style="height:30vh;overflow-y:auto">
                <table class="table"> 
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Points</th>
                    <th>Category</th>
                    <th colspan="3"></th>
                </tr>
                </thead>
                <tbody>
                <% @choose_climate_actions.each.each do |climate_action| %>
                    <tr>
                    <td><%= climate_action.name %></td>
                    <td><%= climate_action.description %></td>
                    <td><%= climate_action.points %></td>
                    <td><%= ClimateActionCategory.find_by(id: climate_action.climate_action_category_id).name %></td> 
                    <td><%= check_box_tag :id, "Choose Action", false, :value => climate_action.id  %></td>
                    </tr>
                <% end %>
                </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <%= submit_tag "Save", class: 'button button-cta'%>
            </div>
        </div>
    </div>
    <% end %>
</div>