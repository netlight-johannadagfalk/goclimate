<%# This file is a partial that shows climate actions %>
<div class="panel panel-default">
  <div class="panel-body">
    <table class="table"> 
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Points</th>
        <th>Image</th>
        <th>Repeatable</th>
        <th>Action of the month</th>
        <th>Category</th>
        <th>Times performed</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @climate_actions.each do |climate_action| %>
        <tr>
          <td><%= climate_action.id %></td>
          <td><%= climate_action.name %></td>
          <td><%= climate_action.description %></td>
          <td><%= climate_action.points %></td>
          <% if climate_action.image_url.eql? nil%>
          <td>No image chosen for this action</td>
          <% else %>
          <td> <%= image_tag image_url(climate_action.image_url), style: 'height:15%;width:auto;' %></td>
          <% end%>
          <td><%= climate_action.repeatable %></td>
          <td><%= climate_action.action_of_the_month %></td>
          <td><%= ClimateActionCategory.find_by(id: climate_action.climate_action_category_id).name %></td> 
          <td><%= UserClimateAction.where(climate_action_id: climate_action.id).count %> times</td>
          <td><%= link_to 'Edit', edit_admin_climate_action_path(climate_action) %></td> &nbsp;
          <td><%= link_to 'Destroy', [:admin, climate_action], method: :delete, data: { confirm: 'Are you sure?' } %></td> 
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>
</div>
<br>
<%= link_to 'New Climate Action', new_admin_climate_action_path, class: 'btn btn-default'%>