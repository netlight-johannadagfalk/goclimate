<%= form_with(model: [:admin, api_key], local: true, class: 'space-y-3') do |form| %>
  <% if api_key.errors.any? %>
    <div>
      <h2><%= pluralize(api_key.errors.count, "error") %> prohibited this API key from being saved:</h2>

      <ul>
        <% api_key.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col">
    <%= form.label :name, class: 'font-bold' %>
    <%= form.text_field :name, class: 'input', required: '' %>
  </div>

  <div class="flex flex-col">
    <%= form.label :usage_description, class: 'font-bold' %>
    <%= form.text_area :usage_description, class: 'input', required: '' %>
  </div>

  <div class="flex flex-col">
    <%= form.label :contact_name, class: 'font-bold' %>
    <%= form.text_field :contact_name, class: 'input', required: '' %>
  </div>

  <div class="flex flex-col">
    <%= form.label :contact_email, class: 'font-bold' %>
    <%= form.email_field :contact_email, class: 'input', required: '' %>
  </div>

  <div class="text-right">
    <%= form.submit class: 'button button-cta' %>
  </div>
<% end %>
