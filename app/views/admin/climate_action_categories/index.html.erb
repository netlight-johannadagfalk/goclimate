<p id="notice"><%= notice %></p>

<h1>Climate Action Categories</h1>
<div class="panel panel-default">
<div class="panel-body">

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @climate_action_categories.each do |climate_action_category| %>
      <tr>
        <td><%= climate_action_category.id %></td>
        <td><%= climate_action_category.name %></td>
        <td><%= climate_action_category.description %></td>
        <td><%= link_to 'Show', [:admin, climate_action_category] %></td> &nbsp;
        <td><%= link_to 'Edit', edit_admin_climate_action_category_path(climate_action_category) %></td> &nbsp;
        <td><%= link_to 'Destroy', [:admin, climate_action_category], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>

<%= link_to 'New Climate Action Category', new_admin_climate_action_category_path, class: 'btn btn-default' %>
