<%= render 'shared/email/heading',
  text: t('thank_you_for_saving_our_planet') %>

<%= render 'shared/email/spacer' %>

<%= render 'shared/email/big_number',
  prefix: t('you_have_lived_a_climate_neutral_life_for'),
  number: @climate_neutral_months,
  suffix: t('months', count: @climate_neutral_months) %>

<%= render 'shared/email/spacer' %>

<%= render 'shared/email/big_number',
  prefix: t('together_we_have_offset'),
  number: number_with_delimiter(@total_carbon_offset),
  suffix: t('tonnes_CO2') %>

<%= render 'shared/email/spacer' %>

<%# <%= render 'shared/email/user_climate_actions', 
  prefix: "Your Climate Actions are:",
  user_climate_actions: @user_climate_actions,
  suffix: "testing"
%>

<%#= render 'shared/email/spacer' %>

<%= render 'shared/email/action_of_the_month', 
  prefix: "The action of the month are:",
  number: @action_of_the_month.name,
  suffix: @action_of_the_month.description,
  climate_impact: "The climate impact point is: " + String(@action_of_the_month.points) + " CO2"
%>

<%= render 'shared/email/spacer' %>

<%= render 'shared/email/paragraph',
  text: t('goclimateneutral_and_this_planet_loves_you') %>

<%= render 'shared/email/spacer' %>

<%= render 'shared/email/paragraph',
  text: t('the_best_way_to_help_is_to_get_as_many_people_climate_neutral_as_possible') %>

<%= render 'shared/email/spacer', narrow: true %>

<%= render 'shared/email/two_columns', left: capture { %>
  <%= render 'shared/email/button',
    text: 'Share on Facebook',
    href: facebook_share_url(@user) %>
<% }, right: capture { %>
  <%= render 'shared/email/button',
    text: 'Share on Twitter',
    href: twitter_share_url(@user) %>
<% } %>

<%= render 'shared/email/spacer' %>

<%= render 'shared/email/button',
  text: t('learn_more_about_what_we_have_achieved_here'),
  href: dashboard_url,
  cta: true %>
